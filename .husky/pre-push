#!/bin/sh
# Pre-push hook: run tests

echo "🧪 Running pre-push tests..."

# Run unit tests
echo "🃏 Running Jest unit tests..."
npm run test || {
  echo "❌ Unit tests failed! Fix failing tests before pushing."
  exit 1
}

# Run e2e tests
echo "🎭 Running Playwright e2e tests..."
npm run test:e2e || {
  echo "❌ End-to-end tests failed! Fix failing tests before pushing."
  exit 1
}

echo "✅ All tests passed! Ready to push."