#!/bin/sh
# Pre-commit hook: run build, lint, and prettier checks

echo "ğŸ” Running pre-commit checks..."

# Run build first
echo "ğŸ—ï¸  Building project..."
npm run build || {
  echo "âŒ Build failed! Fix build errors before committing."
  exit 1
}

# Run ESLint
echo "ğŸ” Running ESLint..."
npm run lint || {
  echo "âŒ ESLint found issues! Run 'npm run lint:fix' to auto-fix or fix manually."
  exit 1
}

# Run Prettier check
echo "âœ¨ Checking code formatting..."
npm run prettier:check || {
  echo "âŒ Code formatting issues found! Run 'npm run prettier:write' to fix."
  exit 1
}

echo "âœ… All pre-commit checks passed!"